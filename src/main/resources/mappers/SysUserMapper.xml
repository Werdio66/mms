<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.mms.mapper.SysUserMapper">

    <resultMap type="com.lx.mms.entity.SysUser" id="SysUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="telephone" column="telephone" jdbcType="VARCHAR"/>
        <result property="mall" column="mall" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="deptId" column="dept_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="operator" column="operator" jdbcType="VARCHAR"/>
        <result property="operatorTime" column="operator_time" jdbcType="TIMESTAMP"/>
        <result property="operatorIp" column="operator_ip" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysUserMap">
        select
          id, username, telephone, mall, password, dept_id, status, remark, operator, operator_time, operator_ip
        from mms.sys_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysUserMap">
        select
          id, username, telephone, mall, password, dept_id, status, remark, operator, operator_time, operator_ip
        from mms.sys_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysUserMap">
        select
          id, username, telephone, mall, password, dept_id, status, remark, operator, operator_time, operator_ip
        from mms.sys_user

    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mms.sys_user(username, telephone, mall, password, dept_id, status, remark, operator, operator_time, operator_ip)
        values (#{username}, #{telephone}, #{mall}, #{password}, #{deptId}, #{status}, #{remark}, #{operator}, #{operatorTime}, #{operatorIp})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mms.sys_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="telephone != null and telephone != ''">
                telephone = #{telephone},
            </if>
            <if test="mall != null and mall != ''">
                mall = #{mall},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="deptId != null">
                dept_id = #{deptId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            <if test="operator != null and operator != ''">
                operator = #{operator},
            </if>
            <if test="operatorTime != null">
                operator_time = #{operatorTime},
            </if>
            <if test="operatorIp != null and operatorIp != ''">
                operator_ip = #{operatorIp},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mms.sys_user where id = #{id}
    </delete>

</mapper>