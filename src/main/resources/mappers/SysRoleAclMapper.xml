<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.mms.mapper.SysRoleAclMapper">

    <resultMap type="com.lx.mms.entity.SysRoleAcl" id="SysRoleAclMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="aclId" column="acl_id" jdbcType="INTEGER"/>
        <result property="operator" column="operator" jdbcType="VARCHAR"/>
        <result property="operatorTime" column="operator_time" jdbcType="TIMESTAMP"/>
        <result property="operatorIp" column="operator_ip" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysRoleAclMap">
        select
          id, role_id, acl_id, operator, operator_time, operator_ip
        from mms.sys_role_acl
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRoleAclMap">
        select
          id, role_id, acl_id, operator, operator_time, operator_ip
        from mms.sys_role_acl
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysRoleAclMap">
        select
          id, role_id, acl_id, operator, operator_time, operator_ip
        from mms.sys_role_acl

    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mms.sys_role_acl(role_id, acl_id, operator, operator_time, operator_ip)
        values (#{roleId}, #{aclId}, #{operator}, #{operatorTime}, #{operatorIp})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mms.sys_role_acl
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="aclId != null">
                acl_id = #{aclId},
            </if>
            <if test="operator != null and operator != ''">
                operator = #{operator},
            </if>
            <if test="operatorTime != null">
                operator_time = #{operatorTime},
            </if>
            <if test="operatorIp != null and operatorIp != ''">
                operator_ip = #{operatorIp},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mms.sys_role_acl where id = #{id}
    </delete>

</mapper>