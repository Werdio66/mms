<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.mms.mapper.SysRoleUserMapper">

    <resultMap type="com.lx.mms.entity.SysRoleUser" id="SysRoleUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="operator" column="operator" jdbcType="VARCHAR"/>
        <result property="operatorTime" column="operator_time" jdbcType="TIMESTAMP"/>
        <result property="operatorIp" column="operator_ip" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysRoleUserMap">
        select
          id, role_id, user_id, operator, operator_time, operator_ip
        from mms.sys_role_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRoleUserMap">
        select
          id, role_id, user_id, operator, operator_time, operator_ip
        from mms.sys_role_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysRoleUserMap">
        select
          id, role_id, user_id, operator, operator_time, operator_ip
        from mms.sys_role_user

    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mms.sys_role_user(role_id, user_id, operator, operator_time, operator_ip)
        values (#{roleId}, #{userId}, #{operator}, #{operatorTime}, #{operatorIp})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mms.sys_role_user
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="operator != null and operator != ''">
                operator = #{operator},
            </if>
            <if test="operatorTime != null">
                operator_time = #{operatorTime},
            </if>
            <if test="operatorIp != null and operatorIp != ''">
                operator_ip = #{operatorIp},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mms.sys_role_user where id = #{id}
    </delete>

</mapper>